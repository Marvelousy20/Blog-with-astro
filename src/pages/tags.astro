---
import Layout from "../layouts/Layout.astro";
const title = "Tag page";
const allPost = await Astro.glob("../pages/posts/*.md");
const uniqueTag = [
  ...new Set(allPost.map((post) => post.frontmatter.tags).flat()),
];
---

<Layout title={title}>
  {uniqueTag.map((tag) => <li>{tag}</li>)}
</Layout>
